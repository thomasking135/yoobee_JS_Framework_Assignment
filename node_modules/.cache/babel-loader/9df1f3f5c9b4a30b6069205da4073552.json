{"ast":null,"code":"export default {\n  name: \"comment-form\",\n\n  data() {\n    return {\n      error: false,\n      submitting: false,\n      success: false,\n      comment: {\n        name: \"\",\n        email: \"\"\n      }\n    };\n  },\n\n  computed: {\n    invalidName() {\n      return this.comment.name === \"\";\n    },\n\n    invalidEmail() {\n      return this.comment.email === \"\";\n    }\n\n  },\n  methods: {\n    handleSubmit() {\n      this.clearStatus();\n      this.submitting = true;\n\n      if (this.invalidName || this.invalidEmail) {\n        this.error = true;\n        return;\n      }\n\n      this.$emit(\"add:comment\", this.comment);\n      this.$refs.first.focus();\n      this.comment = {\n        name: \"\",\n        email: \"\"\n      };\n      this.clearStatus();\n      this.submitting = false;\n    },\n\n    clearStatus() {\n      this.success = false;\n      this.error = false;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAoBA,eAAe;EACbA,IAAI,EAAE,cADO;;EAEbC,IAAI,GAAG;IACL,OAAO;MACLC,KAAK,EAAE,KADF;MAELC,UAAU,EAAE,KAFP;MAGLC,OAAO,EAAE,KAHJ;MAILC,OAAO,EAAE;QACPL,IAAI,EAAE,EADC;QAEPM,KAAK,EAAE;MAFA;IAJJ,CAAP;EASD,CAZY;;EAabC,QAAQ,EAAE;IACRC,WAAW,GAAG;MACZ,OAAO,KAAKH,OAAL,CAAaL,IAAb,KAAsB,EAA7B;IACD,CAHO;;IAKRS,YAAY,GAAG;MACb,OAAO,KAAKJ,OAAL,CAAaC,KAAb,KAAuB,EAA9B;IACF;;EAPQ,CAbG;EAsBbI,OAAO,EAAE;IACPC,YAAY,GAAG;MACb,KAAKC,WAAL;MACA,KAAKT,UAAL,GAAkB,IAAlB;;MAEA,IAAI,KAAKK,WAAL,IAAoB,KAAKC,YAA7B,EAA2C;QACzC,KAAKP,KAAL,GAAa,IAAb;QACA;MACF;;MAEA,KAAKW,KAAL,CAAW,aAAX,EAA0B,KAAKR,OAA/B;MACA,KAAKS,KAAL,CAAWC,KAAX,CAAiBC,KAAjB;MACA,KAAKX,OAAL,GAAe;QACbL,IAAI,EAAE,EADO;QAEbM,KAAK,EAAE;MAFM,CAAf;MAIA,KAAKM,WAAL;MACA,KAAKT,UAAL,GAAkB,KAAlB;IACD,CAlBM;;IAoBPS,WAAW,GAAG;MACZ,KAAKR,OAAL,GAAe,KAAf;MACA,KAAKF,KAAL,GAAa,KAAb;IACF;;EAvBO;AAtBI,CAAf","names":["name","data","error","submitting","success","comment","email","computed","invalidName","invalidEmail","methods","handleSubmit","clearStatus","$emit","$refs","first","focus"],"sourceRoot":"","sources":["/Users/justinaho1996/yoobee_JS_Framework_Assignment/src/components/CommentForm.vue"],"sourcesContent":["<template>\n  <div id=\"comment-form\">\n    <form @submit.prevent=\"handleSubmit\">\n      <label>Comment name</label>\n      <input\n        ref=\"first\"\n        type=\"text\"\n        :class=\"{ 'has-error': submitting && invalidName }\"\n        v-model=\"comment.name\"\n        @focus=\"clearStatus\"\n        @keypress=\"clearStatus\"\n      >\n      <p v-if=\"error && submitting\" class=\"error-message\">❗Please fill out all required fields</p>\n      <p v-if=\"success\" class=\"success-message\">✅ Comment successfully added</p>\n      <button>Add Comment</button>\n    </form>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: \"comment-form\",\n  data() {\n    return {\n      error: false,\n      submitting: false,\n      success: false,\n      comment: {\n        name: \"\",\n        email: \"\"\n      }\n    };\n  },\n  computed: {\n    invalidName() {\n      return this.comment.name === \"\";\n    },\n\n    invalidEmail() {\n      return this.comment.email === \"\";\n    }\n  },\n  methods: {\n    handleSubmit() {\n      this.clearStatus();\n      this.submitting = true;\n\n      if (this.invalidName || this.invalidEmail) {\n        this.error = true;\n        return;\n      }\n\n      this.$emit(\"add:comment\", this.comment);\n      this.$refs.first.focus();\n      this.comment = {\n        name: \"\",\n        email: \"\"\n      };\n      this.clearStatus();\n      this.submitting = false;\n    },\n\n    clearStatus() {\n      this.success = false;\n      this.error = false;\n    }\n  }\n};\n</script>\n\n<style scoped>\nform {\n  margin-bottom: 2rem;\n}\n\n[class*=\"-message\"] {\n  font-weight: 500;\n}\n\n.error-message {\n  color: #d33c40;\n}\n\n.success-message {\n  color: #32a95d;\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}